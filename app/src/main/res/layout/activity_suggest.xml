<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionBarColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/suggestBack"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="反馈建议"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <com.lanma.lostandfound.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/suggestContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="left"
                android:hint="对软件的各种不满、不爽都发泄出来吧,别把自己憋坏了\n反正我又不一定会改...ㄟ( ▔, ▔ )ㄏ"
                android:minHeight="250dp"
                android:padding="5dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/suggestSubmit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_selector_blue_dark_drawable"
                android:text="向我吐槽"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </com.lanma.lostandfound.view.ReboundScrollView>
</LinearLayout>