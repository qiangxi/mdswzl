<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionBarColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userNoteBack"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="用户须知"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <com.lanma.lostandfound.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:minHeight="45dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="用户发布信息须知"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.5dp"
                android:background="@android:color/white"
                android:gravity="left"
                android:minHeight="80dp"
                android:padding="5dp"
                android:text="1,用户须发部真实有效的失物招领信息\n2,当丢失物品找回或有失主认领你捡到的物品,请及时删除发布的失物招领信息\n3,平台默认删除发布超过45天的失物招领信息"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:minHeight="45dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.5dp"
                android:background="@android:color/white"
                android:gravity="left"
                android:minHeight="80dp"
                android:padding="5dp"
                android:text="发布时间ffjasdfho代码大师的那是覅去外地纳斯达克撒尿了三年飞发撒rjh[qwqeqwe阿达大厦的嘎多发达"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
        </LinearLayout>
    </com.lanma.lostandfound.view.ReboundScrollView>
</LinearLayout>